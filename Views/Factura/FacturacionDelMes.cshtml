@model List<Proyecto.Models.Factura>

@{
    ViewData["Title"] = "Facturación del Mes";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
    }

    h1 {
        text-align: center;
        color: #343a40;
        margin-bottom: 20px;
        font-weight: 600;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        padding: 25px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: 600;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-top: 5px;
    }

    .btn {
        padding: 10px 20px;
        font-weight: 600;
        margin-right: 10px;
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
    }

    .btn-primary {
        color: #ffffff;
        border: none;
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
        }

    .alert {
        max-width: 600px;
        margin: 20px auto;
    }

    table {
        width: 90%;
        border-collapse: collapse;
        margin: 30px auto;
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    thead {
        background-color: #000000;
        color: white;
    }

    th, td {
        padding: 14px 20px;
        text-align: center;
    }

</style>

<h2>Facturación por Mes</h2>

<!-- Formulario para seleccionar mes -->
<form asp-action="FacturacionDelMes" method="post">
    <label for="mesSeleccionado">Seleccionar Mes:</label>
    <select name="mesSeleccionado" class="form-control">
        <option value="Enero">Enero</option>
        <option value="Febrero">Febrero</option>
        <option value="Marzo">Marzo</option>
        <option value="Abril">Abril</option>
        <option value="Mayo">Mayo</option>
        <option value="Junio">Junio</option>
        <option value="Julio">Julio</option>
        <option value="Agosto">Agosto</option>
        <option value="Septiembre">Septiembre</option>
        <option value="Octubre">Octubre</option>
        <option value="Noviembre">Noviembre</option>
        <option value="Diciembre">Diciembre</option>
    </select>
    <br>
    <button type="submit" class="btn btn-primary">Buscar Facturas</button>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</form>

<hr />

<!-- Mostrar resultados si hay facturas -->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Producto</th>
                <th>Fecha</th>
                <th>Monto Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var factura in Model)
            {
                <tr>
                    <td>@factura.Id</td>
                    <td>@factura.NombreCliente</td>
                    <td>@factura.NombreProducto</td>
                    <td>@factura.FechaFactura</td>
                    <td>@factura.MontoTotal</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay facturas registradas para este mes.</p>
}
